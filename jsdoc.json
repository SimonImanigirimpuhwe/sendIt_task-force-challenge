{
    "plugins": ["plugins/markdown"],
    "source": {
        "include": ["src"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    }
}